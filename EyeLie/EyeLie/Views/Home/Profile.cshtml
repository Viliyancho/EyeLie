@model EyeLie.Models.User



<style>
    body {
        background-color: #f5f5f5; 
        color: #333;
        font-family: Arial, sans-serif;
    }

    .profile-container {
        max-width: 800px;
        margin: auto;
        background-color: rgba(255, 255, 255, 0.9); 
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .profile-header {
        color: skyblue;
        margin-bottom: 1em;
    }

    .profile-picture {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        border: 2px solid gray;
        object-fit: cover;
    }

    .edit-button {
        background-color: #4a90e2;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 5px;
        margin-top: 10px;
        transition: background-color 0.3s ease;
    }

        .edit-button:hover {
            background-color: #357ab7;
        }

    .bio-section {
        margin-top: 20px;
        color: #666;
    }

    .hearts-count {
        font-size: 18px;
        color: skyblue;
        margin-top: 10px;
    }

    .heart-button {
        background: none;
        border: none;
        color: skyblue;
        font-size: 24px;
        cursor: pointer;
        transition: color 0.3s ease;
    }

        .heart-button:hover {
            color: #357ab7;
        }

    .posts-section {
        margin-top: 30px;
    }

    .post {
        background-color: #f0f8ff;
        border: 1px solid #b0c4de;
        border-radius: 10px;
        padding: 10px;
        margin: 10px;
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .post img {
            max-width: 100%;
            border-radius: 10px;
        }

    .post-content {
        margin-top: 10px;
    }

    .post-date {
        font-size: 12px;
        color: #aaa;
        margin-top: 5px;
    }
</style>

<div class="profile-container">
    <h1 class="profile-header">@Model.UserName</h1>
    <div><strong>@Model.Posts.Count</strong> posts</div>
   
    <div class="text-center">
        <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="profile-picture">

       
        <button class="edit-button" onclick="document.getElementById('profilePictureInput').click();">
            Edit Profile Picture
        </button>
        <input id="profilePictureInput" type="file" style="display: none;" />
    </div>

    <div class="hearts-count">
        Likes: <span>@Model.ProfileHeartsCount</span>
        <button class="heart-button" onclick="likeProfile()">
            <i class="fas fa-heart"></i>
        </button>
    </div>

    <div class="bio-section">
        <p>@Model.Bio</p>
    </div>

    <div class="posts-section">
        <h2 class="text-center">Posts</h2>
        @if (Model.Posts != null && Model.Posts.Count > 0)
        {
            <div class="row">
                @foreach (var post in Model.Posts)
                {
                    <div class="col-md-4">
                        <div class="post">
                            <img src="@post.ImageUrl" alt="Post Image">
                            <div class="post-content">@post.Content</div>
                            <div class="post-date">Posted on: @post.CreatedAt.ToString("MMMM dd, yyyy")</div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-4">
                    <div class="post">
                        <p>No post.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="post">
                        <p>No post.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="post">
                        <p>No post.</p>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

@section Scripts {
    <script>
        function likeProfile() {
            }
    </script>
}
